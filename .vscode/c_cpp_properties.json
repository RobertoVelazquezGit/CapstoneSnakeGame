{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/src",       // source code folder
                "/usr/include/SDL2"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}/src",   
                    "/usr/include",             
                    "/usr/include/SDL2"        
                ],
                "limitSymbolsToIncludedHeaders": true
            },            
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "/usr/bin/g++",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}

